<Page
    x:Class="KiemTraUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KiemTraUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <SplitView x:ConnectionId='2' x:Name="SplitView" DisplayMode="CompactOverlay" IsPaneOpen="True">
        <SplitView.Pane>
            <StackPanel>
                <SymbolIcon x:ConnectionId='3' Symbol="GlobalNavigationButton" 
                                                        
                            HorizontalAlignment="Left" 
                            Margin="10 10"/>
                <HyperlinkButton x:ConnectionId='4' Tag="write"              >Write file</HyperlinkButton>
                <HyperlinkButton x:ConnectionId='5' Tag="readfiles"               >Readfiles</HyperlinkButton>
            </StackPanel>
        </SplitView.Pane>
        <SplitView.Content>
            <Frame x:ConnectionId='6' x:Name="MainContent"></Frame>
        </SplitView.Content>
    </SplitView>
</Page>

